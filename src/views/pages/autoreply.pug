											input#datepicker.js-datepicker(type='text' placeholder='11.06.2022 - ')
											img(src="img/svg/autoreply/arrow.svg", alt="alt")
									.autoreply__item 
										.autoreply__item--title заместитель
										label.autoreply__item--row.autoreply__item--row-search
											input(type='text' placeholder='Андрей Петров')
											img(src="img/svg/autoreply/search.svg", alt="alt")
									.autoreply__item 
										.autoreply__item--title язык
										label.autoreply__item--row.autoreply__item--row-arrow
											select
												option русский
												option русский
