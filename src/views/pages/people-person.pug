extends ../layouts/default

block variables
	- const title = "IP";

block content
	.wrapper
		include ../../blocks/modules/header/header

		include ../../blocks/modules/sidebar-icons/sidebar-icons
		.page
			include ../../blocks/modules/menu/menu
			.content
				.content__container
					.people(style='display:flex; flex-direction:column;height:100%;')
						.people__title.general-title Сотрудники бюро
						.people__header(style='padding-bottom: 40px')
							.people__header--search.search
								.people__header--icon.search--icon
									img(src="img/svg/search-orange.svg", alt="alt")
								.people__header--input.search--input
									input(type="text" placeholder='Найти сотрудника')

							.-select-.people__header--select.select1
								.select1--title
									span взаимодействие с органами власти
								.select1--content
									input#singleSelect1.select1--input(type='radio' name='singleSelect1')
									label.select1--label(for='singleSelect1')
									input#singleSelect2.select1--input(type='radio' name='singleSelect1')
									label.select1--label(for='singleSelect2') все практики / отделы
									.select1--content__wrapper
										.select1--content__left
											.select1--content__title практики
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') антимонопольное регулирование
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') банковское и финансовое право
											input#singleSelect3.select1--input(type='radio' name='singleSelect1' checked='')
											label.select1--label(for='singleSelect3') взаимодействие с органами власти
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') регулирование и комплаенс
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') корпоративное право / M&A
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') международные споры
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') налоги
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') недвижимость и инвестиции
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') разрешение споров в россии
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') private clients
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') энергетика / природные ресурсы
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') коммерческие контракты

										.select1--content__right
											.select1--content__title отделы
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') биллинг
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') кадры
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') финансы
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') IT
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') маркетинг
											input#singleSelect3.select1--input(type='radio' name='singleSelect1')
											label.select1--label(for='singleSelect3') водители / курьеры

							.-select-.people__header--select.select2
								.select2--title
									span Санкт-Петербург
								.select2--content
									input#singleselect11.select2--input(type='radio' name='singleselect2')
									label.select2--label(for='singleselect11')
									input#singleSelect212.select2--input(type='radio' name='singleselect2')
									label.select2--label(for='singleSelect212') все офисы
									input#singleSelect22.select2--input(type='radio' name='singleselect2')
									label.select2--label(for='singleSelect22') Москва
									input#singleSelect33.select2--input(type='radio' name='singleselect2' checked='')
									label.select2--label(for='singleSelect33') Санкт-Петербург

							.people__header--btns
								a(href="people-lists.html").people__header--btn.people__header--btn1
									svg(width='26' height='24' viewBox='0 0 26 24' fill='none' xmlns='http://www.w3.org/2000/svg')
										path(d='M0 1H26M0 12H26M0 23H26' stroke='#CFEDFF' stroke-width='2')
