								.person__row
									.person__img
										img(src="img/man-big.jpg", alt="alt")
									.person__body
										.person__name Юлия Чекмарева
										.person__position советник, руководитель практики Private Clients
										.person__city Москва
										.person__contacts
											.person__contacts--left
												.person__contacts--item
													.person__contacts--icon
														img(src="img/svg/people-person/1.svg", alt="alt")
													a(href="") 1265 (office)
												.person__contacts--item
													.person__contacts--icon
														img(src="img/svg/people-person/2.svg", alt="alt")
													a(href="") +7 495 647 0046 (work)
												.person__contacts--item
													.person__contacts--icon
														img(src="img/svg/people-person/2.svg", alt="alt")
													a(href="") +7 495 647 0046 (personal)
												.person__contacts--item
													.person__contacts--icon
														img(src="img/svg/people-person/3.svg", alt="alt")
													a(href="") y.chekmareva@iplf.ru
